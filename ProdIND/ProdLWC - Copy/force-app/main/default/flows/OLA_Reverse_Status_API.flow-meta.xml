                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Hero_IsDisbursed__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Hero_Disbursed_Date__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Status_as_Disbursed</targetReference>
            </connector>
            <label>When isDisbursed field is true send DISBURSED status</label>
        </rules>
