<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rejection_Reason_is_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(CMU_Accept_Reject__c,&apos;Reject&apos;),  ISBLANK( CMU_Rejection_Reason__c))</errorConditionFormula>
    <errorDisplayField>CMU_Rejection_Reason__c</errorDisplayField>
    <errorMessage>Please select appropriate Rejection Reason</errorMessage>
</ValidationRule>
